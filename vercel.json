{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.js",
            "use": "@now/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [{ "source": "/backend/(.*)", "destination": "/src" }],
    "env": {
        "NODE_ENV": "production"
    }
}